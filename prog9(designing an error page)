<button onclick="speakText()">Click here to speak</button>
<script>
function speakText(){
var message = new SpeechSynthesisUtterance();
message.text="Hello, this is an example of changing voice tone in HTML.";
//Set voice attributes (pitch and rate)
message.pitch = -100; //Adjust pitch (default is 1)
message.rate = 0.8; //Adjust pitch (default is 1)

//Use default voice or specify a particular voice
//message.voice = speechSynthesis.getVoices()[0];//Example: Use the first available voice
//Speak the text
window.speechSynthesis.speak(message);
}
</script>
